<html>
  <head>
    <meta charset="utf-8">
    <%= stylesheet_link_tag 'index' %>
  </head>
  <body>
    <header>
      <div class="header_box">
        <div class="home table_cell"></div>
        <div class="main_image table_cell"><%= image_tag('twitter.png') %></div>
        <div class="top_right table_cell">
        
        </div>
      </div>
    </header>
    <nav>
    
    </nav>
    <section>
        
          
          
        <div class="new_tlog_textbox">
          <div class="profile"><%= image_tag('twitter_profile.png') %></div>
          <%= form_with(model: @tlog, local: true, url: choose_new_or_edit) do |form| %>  
            <%= form.text_area :content, class: 'tlog_textarea'%>
            <%= form.submit "create tlog", class: 'createButton button' %>
          
            <% if @tlog.errors.any? %>
              <div id="error_explanation">
                <ul>
                  <% @tlog.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          <% end %>
        </div>
    </section>
    <aside>
      
    </aside>
  </body>  
</html>

